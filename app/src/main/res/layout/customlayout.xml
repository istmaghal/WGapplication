    <TextView
        android:id="@+id/custEventDatum"
        android:layout_width="91dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
